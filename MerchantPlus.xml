<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="MerchantPlus.lua"/>
	<Button name="MerchantFrameTabPlus" parent="MerchantFrame" inherits="PanelTabButtonTemplate" text="Merchant Plus">
		<Anchors>
			<Anchor point="LEFT" relativeTo="MerchantFrameTab2" relativePoint="RIGHT" x="-16" y="0"/>
		</Anchors>
		<Scripts>
			<OnLoad>
				local tabs = MerchantFrame.Tabs
				self:SetID(#tabs)
				PanelTemplates_SetNumTabs(MerchantFrame, #tabs)
			</OnLoad>
			<OnEnter>
				GameTooltip:SetOwner(self, "ANCHOR_RIGHT");
				GameTooltip:SetText("", 1.0,1.0,1.0 );
			</OnEnter>
			<OnClick>
				PanelTemplates_SetTab(MerchantFrame, self:GetID());
				MerchantPlus_Update();
			</OnClick>
		</Scripts>
	</Button>
	<Frame name="MerchantPlusFrame" parent="MerchantFrame" hidden="true">
		<Anchors>
			<Anchor point="TOPLEFT" x="11" y="-68" />
			<Anchor point="BOTTOMRIGHT" x="-11" y="84" />
		</Anchors>
		<Frames>
			<Frame name="MerchantPlusItemList">
				<Anchors>
					<Anchor point="TOPLEFT" />
					<Anchor point="BOTTOMRIGHT" />
				</Anchors>
				<Frames>
					<EventFrame parentKey="ScrollBar" inherits="WowTrimScrollBar">
						<Anchors>
							<Anchor point="TOPRIGHT" y="-16" />
							<Anchor point="BOTTOMRIGHT"/>
						</Anchors>
					</EventFrame>
					<Frame parentKey="HeaderBar">
						<Size y="16" x="0" />
						<Anchors>
							<Anchor point="TOP"/>
							<Anchor point="RIGHT" relativeKey="$parent.ScrollBar" relativePoint="LEFT"/>
							<Anchor point="LEFT"/>
						</Anchors>
					</Frame>
					<Frame parentKey="ScrollBox" inherits="WowScrollBoxList">
						<KeyValues>
							<KeyValue key="layoutType" value="InsetFrameTemplate" type="string"/>
						</KeyValues>
						<Anchors>
							<Anchor point="TOP" relativeKey="$parent.HeaderBar" relativePoint="BOTTOM"/>
							<Anchor point="BOTTOM"/>
							<Anchor point="RIGHT" relativeKey="$parent.ScrollBar" relativePoint="LEFT"/>
							<Anchor point="LEFT"/>
						</Anchors>
						<Frames>
							<Frame parentKey="NineSlice" useParentLevel="true" inherits="NineSlicePanelTemplate"/>
						</Frames>
					</Frame>
				</Frames>
			</Frame>
		</Frames>
	</Frame>
</Ui>
